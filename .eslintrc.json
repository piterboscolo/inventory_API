{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaVersion": 2021,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "extends": [
    "airbnb-base/legacy"
  ],
  "rules": {
    "semi": "off",
    "no-underscore-dangle": [
      "off"
    ],
    "linebreak-style": [
      "error",
      "windows"
    ],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "no-await-in-loop": 0,
    "no-restricted-syntax": "off",
    "no-unused-expressions": "off",
    "radix": "off",
    "vars-on-top": "off"
    
    /*linebreak-style: ["error", "unix"]*/
  }
}